<h1>Edit Landmark:</h1>

<form action="/landmarks/<%=@landmark.id%>" method="post">
  <input type="hidden" name="_method" value="PATCH">

  <label for="landmark[name]">Landmark Name:</label>
    <input id="landmark_name" type="text" name="landmark[name]" value="<%=@landmark.name%>"><br><br>
  <label for="landmark_year_completed">Year Completed:</label>
    <input id="landmark_year_completed" type="text" name="landmark[year_completed]" value="<%=@landmark.year_completed%>"><br>
    <br>
    <input type="submit" value="Edit Landmark">
</form>
